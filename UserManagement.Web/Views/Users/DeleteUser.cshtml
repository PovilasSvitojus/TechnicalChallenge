@model UserManagement.Models.User

<h2>Are you sure you want to delete this User?</h2>
<hr />

<div>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th width="25%">User Details</th>
					<th style="width: 1px;"></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Forename:</td>
					<td>@Model.Forename</td>
				</tr>
				<tr>
					<td>Last Name:</td>
					<td>@Model.Surname</td>
				</tr>
				<tr>
					<td>Email:</td>
					<td>@Model.Email</td>
				</tr>
				<tr>
					<td>Date Of Birth:</td>
					<td>@Model.DateOfBirth.ToString("dd/MMM/yyyy")</td>
				</tr>
				<tr>
					<td>Is Active?</td>
					<td>@(Model.IsActive ? "Yes" : "No")</td>
				</tr>
			</tbody>
		</table>
	</div>

	<form asp-action="Delete" asp-route-id="@Model.Id">
		<input type="submit" value="Delete" class="btn btn-danger" /> 
	</form>
</div>

<div>
	<br />
	<a asp-action="List">Back to User List</a>
</div>
